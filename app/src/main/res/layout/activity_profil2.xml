<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#a7aba7a7">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/retour"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_person_black_24dp"
            android:layout_marginLeft="65dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/boutton">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="INFORMATIONS SUR VOUS !!"
            android:layout_marginLeft="75dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/frag2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:text="NOM :"
            android:layout_marginTop="20dp"
            android:id="@+id/nom"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:text="PRENOM :"
            android:layout_marginTop="70dp"
            android:id="@+id/prenom"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:text="Telephone :"
            android:layout_marginTop="120dp"
            android:id="@+id/telephone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@drawable/ic_border_color_black_24dp"
            android:text="Inscit :"
            android:layout_marginTop="170dp"
            android:id="@+id/inscrit"/>
    </RelativeLayout>


</LinearLayout>